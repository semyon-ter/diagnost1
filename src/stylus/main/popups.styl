.popups-box
	posfix()
	t 0
	l 0
	w 100%
	h 100% 
	zIn 200
	pointer-events: none
	op 0
	tPD(.3s)	
	dflex()
	overflow auto 
	flex-wrap wrap
	align-items center
	justify-content center	
	&.show
		pointer-events auto
		op 1
	.popup-bg
		posabs()
		t 0
		l 0 
		w 100%
		h 100% 
		zIn 205
		dflex()
		justify-content flex-end
		p 30px
		bbox()
		bgColor $color4-4
		lgrad($grad1, 90deg)
		op .6
	.popup-item
		posrel()
		zIn 210
		bgColor $color1-2
		p(80px 35px 90px 100px)
		bbox()
		dnone()
		ov hidden
		&.popup-item__width-1
			w 90%
			maxWth 1454px
		&.popup-item__width-2
			w 100%
			maxWth 652px
			p(80px 130px 51px 123px)
			.title
				mb 45px
			.popup-close
				r 61px
		&.popup-item__width-3
			w 100%
			maxWth 511px
			p(80px 60px 60px)
			.title
				mb 45px
				pl 62px
				&:before
					l 62px
			.popup-close
				r 86px				
		&.show 
			dblock()	
		.popup-close
			posabs()
			t 57px
			r 35px
			zIn 2
		.title
			lht 1
			fsize 25px
			mb 20px
			span
				fsize 100%
				lht 100%
		p
			mb 20px
			fsize 17px
			ffam(GL,sans-serif)
			lht 1.4
			tali justify
		.scrollbar-track-y.show
			display block !important
			.scrollbar-thumb-y
				h 53px							
	.popup-close
		w 35px
		h 35px
		bgPos(center)
		bgNR()
		bgSize(16px)
		tPD(.3s)
		bRad 50%
		bgColor $color7-1
		cursor pointer
		bgImg url(pics/icons/close2.svg)
	.popup-content
		posrel()
		zIn 5	
	.popup__txt-1
		tcenter()
		fsize 17px
		c $color3-5 
		lht 1.2
		pt 15px
		pb 25px
		ml auto
		mr auto
		maxWth 260px
	.popup__txt-2
		tcenter()
		fsize 17px
		c $color7-1
		lht 1.2
		ml auto	
		mr auto
		pt 18px
		pb 23px	
	.form__input
		& + .form__input
			mt 30px
	.popup__soc-auth
		mb 30px
		pl 17px
		pr 17px
		bbox()	
			
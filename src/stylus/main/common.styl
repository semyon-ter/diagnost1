.page-wrapper
  posrel()
  &.section
    minHt initial
    pt 0 
    pb 0
.page-container
  maxWth $WIDTH
  w 100%
  margin 0px auto
  bbox()
  &.page-container_pad-1
      pl 41px
      pr 41px
  &.section__content
    maxWth $WIDTH
    zIn 2
  p
    tali justify
    //fsize 77% 
  .section__article
    mb 0     

 
.section__article
  &.section__article_width-1
    maxWth 685px
    mb 0
    
.section__content_wide
  &.v2 
    p
      &:before
        dblock()

.tac
  tcenter()
.tar
  tright()
.tal
  tleft()

.l
  float left
.r

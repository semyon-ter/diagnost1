marg(zt)
for zt in 0..100
  .mt-{zt}
    mt((1px*zt)imp())
  .mr-{zt}
    mr((1px*zt)imp())
  .mb-{zt}
    mb((1px*zt)imp())
  .ml-{zt}
    ml((1px*zt)imp())
marg(0,300)

padd(rt)
for rt in 0..100
  .pt-{rt}
    pt((1px*rt)imp())
  .pr-{rt}
    pr((1px*rt)imp())
  .pb-{rt}
    pb((1px*rt)imp())
  .pl-{rt}
    pl((1px*rt)imp())
padd(0,300)



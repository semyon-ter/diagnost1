.roller 
  posrel()
  ov auto
  &.roller__height-1
    h 53.75vh
    maxHt 516px
    //h 450px  
  .scrollbar-track-y
    w 17px
    &:before
      w 1px
      h 100%
      l 50%
      t 0
  .scrollbar-track-x
    h 17px
    &:before
      h 1px
      w 100%
      l 0
      t 50%    
  .scrollbar-track
    bgColor transparent
    &:before
      content ''
      posabs()
      zIn 1
      bgColor $color3-5
  .scrollbar-thumb
    w 17px
    h 17px
    bRad 8px
    bgColor $color6-1
    posrel()
    zIn 2

.t
	/* font family */
	&.t-font1
		ffam($FONT)
	&.t-font2
		ffam($FONT2) 
	&.t-font3
		ffam($FONT3)
	&.t-font4
		ffam($FONT4)
	&.t-font5
		ffam($FONT5)
	&.t-font6
		ffam($FONT6)
	/* font size */
	&.t-fs10
		fsize 10px							
	&.t-fs12
		fsize 12px
	&.t-fs14
		fsize 14px
	&.t-fs16
		fsize 16px			
	&.t-fs18
		fsize 18px
	&.t-fs20
		fsize 20px
	&.t-fs25
		fsize 25px
	&.t-fs30
		fsize 30px
	/* line height */	
	&.t-lh1
		lht 1
	&.t-lh1-2
		lht 1.2
	&.t-lh1-3
		lht 1.3
	&.t-lh1-4
		lht 1.4
	&.t-lh1-6
		lht 1.6
	&.t-lh1-8
		lht 1.8
	&.t-lh2
		lht 2
	/* color */
	&.t-color1
		c $color1-1
	&.t-color2
		c $color2-1
	&.t-color3
		c $color6-1			
		
a
	c inherit
	tdecNone()
	tPD(.3s)		
	
/* title */ 
.how__item-title
	&.how__item-title_tal
		&:before
			ml 0
			
h1, h2, h3, h4, h5, h6			
	&.item-title__fs-t1
		fsize 115%
.title
	&.title_color-1
		c $color3-5
			
/* text */
.item-text__border-none
	p
		&:before
			content none
			

/* list */
ul, ol
	&.list
		&.list_easy
			list-style none
			p 0
			m 0
			fsize 88%
			c $color4-4
			li
				tPD(.3s)				
				&:hover
					c $color7-1	
html, body
  padding 0px
  margin 0px
  ffam($FONT3)
  background-size cover
     
  
/*body
  dflex()   
.class  
  width: "calc(100% - %s - %s)" % ($padding-main-wrap-l $padding-main-wrap-r) 
.class2
  width: "calc(100% - %s)" % $padding-main-wrap-r   

